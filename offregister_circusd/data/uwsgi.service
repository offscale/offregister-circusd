[Unit]
Description=UWSGI
After=syslog.target network.target nss-lookup.target

[Service]
Type=simple
WorkingDirectory=%(BACKEND_ROOT)s
ExecStart='%(VENV)s/bin/uwsgi' --uid '%(UID)d' --gid '%(GID)d' --http ':%(PORT)d' --module '%(NAME)s.wsgi'
User=%(USER)s
Group=%(GROUP)s
Restart=always
RestartSec=5

[Install]
WantedBy=default.target
